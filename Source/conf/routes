# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           org.slashgames.tournament.core.controllers.Application.index()

GET     /tournaments                org.slashgames.tournament.core.controllers.TournamentController.tournaments()
GET     /tournament/:id             org.slashgames.tournament.core.controllers.TournamentController.tournament(id: Long)

# Authentication
GET     /login               		org.slashgames.tournament.auth.controllers.LoginController.login()
POST    /login               		org.slashgames.tournament.auth.controllers.LoginController.loginSubmit()
GET     /logout               		org.slashgames.tournament.auth.controllers.LoginController.logout()
GET     /signup               		org.slashgames.tournament.auth.controllers.LoginController.signup()
POST    /signup               		org.slashgames.tournament.auth.controllers.LoginController.signupSubmit()

# CMS
GET		/cms/tournament/add			org.slashgames.tournament.cms.controllers.TournamentCMSController.addTournament()
POST	/cms/tournament/add			org.slashgames.tournament.cms.controllers.TournamentCMSController.addTournamentSubmit()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
